{
  "compilerOptions": {
    "types": ["node","lodash","react","react-dom"],
    "typeRoots": [ "node_modules/@types"],
    "compileOnSave": true,
    "target": "es5",
    "module": "amd",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "allowUnreachableCode": true,
    "moduleResolution":"classic",
    "lib": ["es2015", "dom"]
  },
  "include": [
    "./public/**/*.ts",
    "./public/**/*.tsx"
  ]
}