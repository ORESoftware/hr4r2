{
  "compilerOptions": {
    "baseUrl": "public",
    "paths": {
    },
    "types": [
      "node",
      "lodash",
      "react",
      "react-dom",
      "redux",
      "react-redux",
      "redux-thunk",
      "async",
      "requirejs",
      "socket.io",
      "socket.io-client",
      "immutable",
      "uuid"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "compileOnSave": true,
    "target": "es5",
    "module": "amd",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "allowUnreachableCode": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./public/**/*.ts",
    "./public/**/*.tsx"
  ]
}