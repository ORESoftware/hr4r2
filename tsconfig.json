{
  "compilerOptions": {
    "paths": {
      "@hot-reload-handler": [ "public/js/hot-reload-handler"],
      "@hot-reloader": [ "public/js/hot-reloader"]
    },
    "types": [
      "node",
      "lodash",
      "react",
      "react-dom",
      "async",
      "socket.io"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "compileOnSave": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "public",
    "node_modules"
  ]
}